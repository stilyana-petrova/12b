@model SchoolDiary.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
    <h4>Ученик</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Име
            @*@Html.DisplayNameFor(model => model.FirstName)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Фамилия
            @*@Html.DisplayNameFor(model => model.LastName)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Град
            @*@Html.DisplayNameFor(model => model.Town)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Town)
        </dd>
        <dt class="col-sm-2">
            Среден успех
            @*@Html.DisplayNameFor(model => model.AverageGrade)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AverageGrade)
        </dd>
        <dt class="col-sm-2">
            Снимка
            @*@Html.DisplayNameFor(model => model.Image)*@
        </dt>
        <dd>
            <img src="@Html.DisplayFor(model => model.Image)" alt="Image" width="100" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a> |
    <a asp-action="Index">Назад към дневника</a>
</div>
